from zipfile import ZipFile

import os



# Directory structure for Ofgas-pro-news project

project_structure = {

    "Ofgas-pro-news/index.html": """

<!DOCTYPE html>

<html lang="en">

<head>

  <meta charset="UTF-8" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <meta name="description" content="Ofgas Pro News" />

  <title>Ofgas News Today</title>

  <link rel="stylesheet" href="assets/style.css" />

  <script src="scripts/main.js" defer></script>

</head>

<body>

  <header>

    <h1>Ofgas News Today</h1>

    <p>Powered by Ofgas | Auto News System</p>

  </header>



  <main id="content">

    <section id="autoblog"></section>

    <section id="video-feed">

      <h2>Latest Video News</h2>

      <div id="yt-videos"></div>

      <div id="dm-videos"></div>

    </section>

    <section id="sponsored-posts">

      <h2>Sponsored Articles</h2>

      <div id="sponsored-list"></div>

    </section>

  </main>



  <aside id="admin-panel">

    <h3>Control Panel</h3>

    <button onclick="generateBlog()">Generate Blog</button>

    <button onclick="pushNotification()">Send Push</button>

    <button onclick="translateToggle()">Toggle Translate</button>

    <p>Status: <span id="status">Idle</span></p>

  </aside>



  <footer>

    <p>Powered by Ofgas</p>

  </footer>

</body>

</html>

""",

    "Ofgas-pro-news/assets/style.css": """

body {

  font-family: Arial, sans-serif;

  margin: 0;

  padding: 0;

  background: #f9f9f9;

}

header, footer {

  background: #001f3f;

  color: white;

  padding: 1rem;

  text-align: center;

}

main {

  padding: 1rem;

}

section {

  margin-bottom: 2rem;

}

#admin-panel {

  background: #eee;

  padding: 1rem;

  margin: 1rem;

  border: 1px solid #ccc;

}

button {

  margin: 0.5rem;

  padding: 0.5rem 1rem;

}

""",

    "Ofgas-pro-news/scripts/main.js": """

function generateBlog() {

  const blogSection = document.getElementById("autoblog");

  const article = document.createElement("article");

  article.innerHTML = `

    <h3>AI Generated News</h3>

    <p>This article is generated by AI using Ofgas System.</p>

  `;

  blogSection.appendChild(article);

  document.getElementById("status").innerText = "Blog Generated";

}



function pushNotification() {

  alert("Push notification sent (demo)");

  document.getElementById("status").innerText = "Push Sent";

}



function translateToggle() {

  alert("Language Toggled (demo)");

  document.getElementById("status").innerText = "Language Toggled";

}

"""

}



# Save all files into a zip

zip_path = "/mnt/data/Ofgas-pro-news.zip"

with ZipFile(zip_path, 'w') as zipf:

    for file_path, content in project_structure.items():

        temp_path = f"/mnt/data/{file_path}"

        os.makedirs(os.path.dirname(temp_path), exist_ok=True)

        with open(temp_path, "w", encoding="utf-8") as f:

            f.write(content.strip())

        zipf.write(temp_path, arcname=file_path.replace("Ofgas-pro-news/", ""))



zip_path
